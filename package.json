{
  "name": "gitlab-mcp-server",
  "version": "2.0.0",
  "description": "GitLab MCP Server - 提供 GitLab 集成的 MCP 服务，支持 MR 管理、文件操作和代码审查",
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "gitlab-mcp": "dist/src/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --skipLibCheck && chmod +x dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/src/index.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    
    "test:mcp": "bash scripts/test-mcp.sh",
    "test:mcp:ui": "npx @modelcontextprotocol/inspector --config mcp-inspector.json --server gitlab-mcp",
    "test:mcp:list": "npx @modelcontextprotocol/inspector --cli node dist/src/index.js --method tools/list",
    "test:mcp:resources": "npx @modelcontextprotocol/inspector --cli node dist/src/index.js --method resources/list",
    "test:mcp:prompts": "npx @modelcontextprotocol/inspector --cli node dist/src/index.js --method prompts/list",
    
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gitlab",
    "mcp",
    "model-context-protocol",
    "merge-request",
    "code-review",
    "stdio",
    "typescript"
  ],
  "author": "Lynncen",
  "license": "MIT",
  "dependencies": {
    "@gitbeaker/rest": "^43.0.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "dotenv": "^17.2.0",
    "pino": "^8.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^1.6.0",
    "c8": "^8.0.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
